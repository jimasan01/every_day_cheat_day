<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @cheat, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "商品名" %>
      <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= form.file_field :image, id:"item-image" %>
      </div>
    </div>
      <%= form.text_area :text, placeholder: "説明", rows: "10" %>
      ジャンル
      <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
      ボリューム
      <%= form.collection_select(:volume_id, Volume.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
      都道府県
      <%= form.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
      <%= form.text_field :city, placeholder: "市区町村" %>
      <%= form.text_field :house_number, placeholder: "番地" %>
      <%= form.text_field :building, placeholder: "建物名" %>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>